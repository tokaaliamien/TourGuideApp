<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HistoricalPlacesActivity"
            android:label="@string/historical_places" />
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/restaurants" />
        <activity android:name=".HotelsActivity" android:label="@string/hotels"/>
        <activity android:name=".BeachesActivity" android:label="@string/beaches"></activity>
    </application>

</manifest>